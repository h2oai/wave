{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug UI",
      "url": "http://localhost:3000/demo",
      "webRoot": "${workspaceFolder}/ui"
    },
    {
      "name": "Debug Wavegen",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/tools/wavegen/src/wavegen.ts",
      "preLaunchTask": "tsc: build - tools/wavegen/tsconfig.json",
      "cwd": "${workspaceFolder}/tools/wavegen",
      "args": [
        "../../ui/src",
        "../../py/h2o_wave",
        "../../r/R"
      ],
      "outFiles": [
        "${workspaceRoot}/tools/wavegen/build/**/*.js"
      ]
    },
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "args": [
        "scripts/test.js",
        "--runInBand",
        "--no-cache",
        "--env=jsdom"
      ],
      "cwd": "${workspaceRoot}/ui",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Wave Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/wave/main.go",
      "cwd": "${workspaceFolder}",
      "args": [
        "-web-dir",
        "./ui/build",
        "-debug",
        "-editable",
      ]
    },
    {
      "name": "Debug Wave Server (OIDC)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/wave/main.go",
      "cwd": "${workspaceFolder}",
      "args": [
        "-web-dir",
        "./ui/build",
        "-debug",
        "-editable",
        "-oidc-client-id",
        "${env:OIDC_CLIENT_ID}",
        "-oidc-client-secret",
        "${env:OIDC_CLIENT_SECRET}",
        "-oidc-provider-url",
        "http://localhost:8080/auth/realms/master",
        "-oidc-redirect-url",
        "http://localhost:10101/_auth/callback",
        "-oidc-redirect-url",
        "http://localhost:10101/_auth/callback",
      ]
    }
  ]
}